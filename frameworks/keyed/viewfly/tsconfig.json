{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "useDefineForClassFields": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitAny": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "jsxImportSource": "@viewfly/core"
  },
  "exclude": ["doc-editor"]
}
