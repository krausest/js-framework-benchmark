<tr class={{@className}}>
	<td class="col-md-1">{{@id}}</td>
	<td class="col-md-4">
		<a onclick={{action @select}}>{{@label}}</a>
	</td>
	<td class="col-md-1"><a onclick={{action @delete}}><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
	<td class="col-md-6"></td>
</tr>