{
  "name": "wcf",
  "version": "0.0.1",
  "description": "Lightweight compiled web component framework",
  "author": "Timothy Louw",
  "license": "MIT",
  "type": "module",
  "main": "dist/runtime/index.js",
  "types": "dist/runtime/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "client.d.ts"
  ],
  "bin": {
    "wcf": "./dist/compiler/cli/wcf.js"
  },
  "exports": {
    ".": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js",
      "default": "./dist/runtime/index.js"
    },
    "./client": {
      "types": "./client.d.ts"
    },
    "./compiler": "./dist/compiler/index.js",
    "./compiler/cli": "./dist/compiler/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "pack": "npm pack",
    "test": "bun test",
    "format": "prettier --write \"**/*.{ts,json,html}\"",
    "format:check": "prettier --check \"**/*.{ts,json,html}\""
  },
  "dependencies": {
    "@types/bun": "^1.3.5",
    "esbuild": "^0.27.1",
    "typescript": "^5.9.3"
  }
}
