{
  "name": "angular-closure",
  "version": "1.0.0",
  "description": "An angular app using closure compiler",
  "scripts": {
    "start": "echo 'please start in root project'",
    "test": "karma start",
    "ngc": "ngc",
    "preclosure": "rm -rf dist",
    "closure": "java -jar node_modules/google-closure-compiler/compiler.jar --flagfile closure.conf",
    "build-prod": "npm run ngc && npm run closure",
    "rollup": "rollup -c rollup.config.js",
    "build-dev": "npm run ngc && npm run rollup"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "6.0.0-rc.0",
    "@angular/compiler": "6.0.0-rc.0",
    "@angular/compiler-cli": "6.0.0-rc.0",
    "@angular/core": "6.0.0-rc.0",
    "core-js": "2.5.3",
    "rxjs": "6.0.0-beta.1",
    "zone.js": "0.8.20"
  },
  "devDependencies": {
    "google-closure-compiler": "20171023.0.1",
    "http-server": "^0.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^3.0.0",
    "typescript": "^2.7.2",
    "typings": "^2.1.1",
    "yargs": "^11.0.0"
  }
}
